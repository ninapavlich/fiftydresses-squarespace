{.section item}
</section>

  <div class="fixed-height-carousel unloaded fixed-height-carousel-theme-default" >
    <ul>
      {.repeated section items}
        {.image?}
          <li>
              <figure>
                  <img alt="{title}" src="{assetUrl}">
              </figure>
          </li>
        {.end}
      {.end}
    </ul>
  </div>


  

<section class="inner-container">
  <div id="productWrapper" class="clearfix">

    <div class="col-9-12">
      <div >
        
        <!-- This shows the status (sold out/on sale), price, and description (excerpt) text -->
        <div id="productDetails">
          {@|product-status}
        
          {.excerpt?}
            <div class="product-excerpt">
              {excerpt}
            </div>
          {.end}

        </div>

        {.section body}
        <div class="product-description">
          {@}
        </div>
        {.end}

      </div>
    </div>
    <div class="col-3-12">

      {@|product-price}

      {@|product-checkout}
         
     
    </div>
  </div>

  <div class="clearfix">

    <div class="featured-link">
        <a href="/shop?">
            <span class="fa fa-chevron-left"></span>
            <h3>Back to the shop</h3>
            
        </a>
    </div>
  </div>
{.end}