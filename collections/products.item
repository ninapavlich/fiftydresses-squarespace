  <div class="fixed-height-carousel unloaded fixed-height-carousel-theme-default" >
    <ul>
      {.repeated section items}
        {.image?}
          <li>
              <figure>
                  <img alt="{title}" src="{assetUrl}">
              </figure>
          </li>
        {.end}
      {.end}
    </ul>
  </div>


  

<section class="inner-container">

  <div class="col-9-12">
    <div id="productWrapper">
      
      Product info goes here...

    </div>
  </div>
  <div class="col-3-12">
    <div class="sidebar">
      <h3>Shop</h3>
      {.section collection}
        <ul>
          <squarespace:query collection="shop">
          {.repeated section items}
