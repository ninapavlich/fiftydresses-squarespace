{.repeated section items}

  <article class="{@|item-classes}" id="article-{id}" data-item-id="{id}">
    
    <div class="content-wrapper">
      
      <div class="post{.passthrough?} link-list-item{.end}">
        
        <!--POST HEADER-->
        <header>

         
          {.if title}<h1 class="entry-title" data-content-field="title">{title}</h1>{.end}

      
          <span class="article-byline">
            {.section location}<span class="location">{.if addressTitle}<a href="//maps.google.com/maps?q={mapLat},{mapLng}" target="_blank" title="View map in new window">{addressTitle}</a><span class="delimiter">/</span>{.end}</span>{.end}
            {.section author}<span class="author"><a href="{collection.fullUrl}?author={id}" rel="author">{displayName}</a></span>{.end}
          </span>

        </header>
          
        <!--POST BODY-->
        
        {.excerpt?}
        
        {.main-image?}
        <div class="excerpt-thumb">
          <div class="intrinsic">
            <div class="content">
              <a href="{fullUrl}" class="excerpt-image content-fill"><img {@|image-meta} /></a>
            </div>
          </div>
        </div>
        {.end}

        <div class="body entry-content excerpt-content">{excerpt}<span class="inline-action"><a class="inline-read-more" href="{fullUrl}">Read More</a></span></div>
        
        {.or}
        
        {.section body}<div class="body entry-content">{@}</div>{.end}
        
        {.end}
        
        
        
        
    </div> <!-- / post --> 
    
    </div><!-- / content-wrapper -->
  </article>
  
{.end}

<!--PAGINATION-->
  
{.section pagination}
<nav class="page pagination">
  <div class="content-wrapper">
    <ul>
      {.if pagination.prevPage}<li class="prev"><a href="{prevPageUrl}" id="prevLink"><i class="icon-chevron-left"></i>Previous</a></li>
      {.or}<li class="no-prev"><!-- <a href="{collection.fullUrl}"><i class="icon-list"></i>{collection.title}</a> --></li>{.end}
      {.if pagination.nextPage}<li class="next"><a href="{nextPageUrl}" id="nextLink">Next<i class="icon-chevron-right"></i></a></li>
      {.or}<li class="no-next"><a href="{collection.fullUrl}"><i class="icon-list"></i>{collection.title}</a></li>{.end}
    </ul>
  </div>
</nav>
{.end}

